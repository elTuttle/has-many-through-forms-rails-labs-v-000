<h1><%= @post.title %></h1>
<h3><%= @post.content %></h3>
<h5><%@post.categories.each do |category|%>
    <%= category.name %>,
<%end%></h5>
<%@post.users.each do |user|%>
  <%user.comments.each do |comment|%>
    <%=comment.content%>
  <%end%>
  <p><%= link_to user.username, user_path(user) %></p>
<%end%>
<%= form_for @post do |f| %>
  <%= f.fields_for :comment, @post.comments.build do |comment| %>
    <%= comment.text_field :content %>
    <%= f.collection_select :user_ids, User.all, :id, :username %>
  <% end %>
<%end%>
